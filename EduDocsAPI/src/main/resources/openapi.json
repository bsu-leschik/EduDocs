{
  "openapi": "3.0.3",
  "info": {
    "title": "EduDocs",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/EduDocsAPI"
    }
  ],
  "tags": [
    {
      "name": "User",
      "description": "Operations about user"
    }
  ],
  "paths": {
    "/user/login": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Logs user into the system",
        "description": "",
        "operationId": "loginUser",
        "parameters": [
          {
            "name": "login",
            "in": "query",
            "description": "The users name for login",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "password",
            "in": "query",
            "description": "The password for login",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "400": {
            "description": "Invalid username/password supplied"
          },
          "401": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/user/logout": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Logs out current logged in user session",
        "description": "",
        "operationId": "logoutUser",
        "parameters": [],
        "responses": {
          "default": {
            "description": "successful operation"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "ID": {
            "type": "integer",
            "format": "32 hexadecimal characters with four hyphens",
            "example": "df3305c3-c8ef-4eeb-8538-6666e9a4d010"
          },
          "login": {
            "type": "string",
            "example": "fpm.******"
          },
          "password": {
            "type": "string",
            "example": "9iuo8nvw65n98e5"
          },
          "name": {
            "type": "string",
            "example": "John"
          },
          "surname": {
            "type": "string",
            "example": "James"
          },
          "lastname": {
            "type": "string",
            "example": "Andreevich"
          }
        },
        "xml": {
          "name": "user"
        }
      }
    }
  }
}